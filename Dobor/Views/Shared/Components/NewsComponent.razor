@using Microsoft.AspNetCore.Components.Web;
@using Dobor.ViewModels

<div class="news">
    <div class="news__preview">
        <img alt="img" src="@News.PhotoPath" />
    </div>
    <div class="news__content">
        <div class="news-category" style="background-color: @News.Tag.Color">
            <span>
                @News.Tag.Name
            </span>
        </div>
        <div class="news-title">
            <h1>
                @News.Title
            </h1>
        </div>
        <div class="news-info">
            <div class="news-info__author">
                <span>By</span>
                <a href="#">
                    <span class="author-name">
                        @News.Author
                    </span>
                </a>
            </div>
            <i class="dot">.</i>
            <div class="news-info__date">
                @News.CreatedDateFormatted
            </div>
        </div>
        <div class="news-description">
            <p>
                @News.Description
            </p>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public NewsViewModel News { get; set; }
}
